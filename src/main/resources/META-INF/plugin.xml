<?xml version="1.0" encoding="utf-8"?>

<idea-plugin>
    <id>software.xdev.openrewriter</id>
    <name>OpenRewriter X</name>
    <vendor url="https://www.github.com/xdev-software">xdev-software</vendor>

    <description><![CDATA[
Provides support for <a href="https://github.com/openrewrite">OpenRewrite</a>
    ]]></description>

    <change-notes><![CDATA[
<a href="https://github.com/xdev-software/intellij-plugin-openrewriter/releases">https://github.com/xdev-software/intellij-plugin-openrewriter/releases</a>
    ]]>
    </change-notes>

    <!-- https://plugins.jetbrains.com/docs/intellij/build-number-ranges.html -->
    <idea-version since-build="231"/>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="OpenRewriter"
                    anchor="bottom"
                    factoryClass="software.xdev.openrewriter.toolwindow.OpenRewriterExecuteRecipeToolWindowFactory"
                    icon="software.xdev.openrewriter.OpenRewriterIcons.PLUGIN_13"/>
    </extensions>

</idea-plugin>
